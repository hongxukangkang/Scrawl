<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.meitu.android.MainActivity"
    android:background="@color/palegoldenrod">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_marginTopBottom"
            android:layout_marginBottom="@dimen/main_marginTopBottom">

            <include layout="@layout/main_layout_contents" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
